<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="SingleEditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Loading" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:background">@mipmap/first_loading_bg</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">
            @mipmap/quick_bg
        </item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeLogout" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="ProfileEditRight" parent="@style/SingleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#383838</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">14sp</item>

        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="ActionSheetStyle" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="ApprovalDetailsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="SharedAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/shared_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/shared_push_bottom_out</item>
    </style>

    <style name="push_down_style" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="popuStyle">
        <item name="android:windowEnterAnimation">@anim/popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out</item>
    </style>
    <!-- 提交按钮 白字 蓝切淡蓝背景 -->
    <style name="submit_button_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_select_sel</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="animDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <!-- 宽高fw -->
    <style name="prent_widget_fw">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 宽高wf -->
    <style name="prent_widget_wf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 宽高ww -->
    <style name="prent_widget_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 宽高ff -->
    <style name="prent_widget_ff">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 宽高ff 水平分布 -->
    <style name="prent_widget_ffh">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 宽高ff 垂直分布 -->
    <style name="prent_widget_ffv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 宽高fw 水平分布 -->
    <style name="prent_widget_fwh">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 宽高fw 垂直分布 -->
    <style name="prent_widget_fwv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 宽高ww 垂直分布 -->
    <style name="prent_widget_wwv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 宽高ww 水平分布 -->
    <style name="prent_widget_wwh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 宽高wf 垂直分布 -->
    <style name="prent_widget_wfv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 宽高wf 水平分布 -->
    <style name="prent_widget_wfh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Common list com.vgtech.personaledition.view styles -->
    <style name="MyWidget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:cacheColorHint">#00ffffff</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="Activity_Pop" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/address_background</item>
    </style>

    <!-- 登录 初始化 输入框-->
    <style name="EditText_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--   android:digits="@string/register_name_digits" 限制只能输入数字和字母的-->
    <style name="EditText_password" parent="@style/EditText_input">
        <item name="android:maxLength">16</item>
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/toast_pwd_must_6_size</item>
    </style>

    <!-- 登录 初始化 左边的 图片-->
    <style name="ImageView_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <!--<style name="action_sheet_no_animation" parent="android:Animation">-->
        <!--<item name="@android:windowEnterAnimation">@anim/actionsheet_bg_in</item>-->
        <!--<item name="@android:windowExitAnimation">@anim/actionsheet_bg_out</item>-->
    <!--</style>-->

    <style name="ImageView_left">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/icon_work_group_img</item>
    </style>


    <style name="TextView_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>


    <style name="RelativeLayout_choose_country">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- CreateJobsActivity 下面几个都是-->
    <style name="item_left_imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


    <style name="item_left_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:text">@string/mandatory</item>
    </style>

    <style name="item_right_imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
    </style>


    <style name="item_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_single_item</item>
        <item name="android:visibility">visible</item>
    </style>


    <style name="item_editText">
        <item name="android:background">@drawable/edit_outline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minEms">10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">top</item>
    </style>


    <style name="Animation_PopupWindow">
        <item name="android:windowEnterAnimation">@anim/share_popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/share_popup_anim_out</item>
    </style>

