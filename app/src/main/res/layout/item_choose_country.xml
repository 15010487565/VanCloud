<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rala_chose_country"
    style="@style/RelativeLayout_choose_country">

    <EditText
        android:id="@+id/et_country_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="86"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/register_choose_country"
        android:textColor="#B2B4B6"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_chosed_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_country"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tv_country"
        android:layout_toRightOf="@+id/tv_country"
        android:text="@string/register_china"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon_arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#eaeaea" />
</RelativeLayout>


