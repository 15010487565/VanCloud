<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar_signin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:text="@string/code_send_phone"
        android:textColor="@color/black_22"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_SigniinTopHint_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@color/black_22"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_bg"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_signin_phonecode"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="6"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/comment_grey"
            android:textColorHint="@color/comment_grey"
            android:hint="@string/vancloud_bind_verification_code"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/send_ver_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dip"
            android:text="@string/x_sencend_resend"
            android:textColor="#999999" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/out_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_signin_pwd"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/comment_grey"
            android:textColorHint="@color/comment_grey"
            android:hint="@string/input_new_pwd"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/del_signin_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dip"
            android:src="@drawable/ic_edit_del" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/out_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_sigin_pwd_confirm"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/comment_grey"
            android:textColorHint="@color/comment_grey"
            android:hint="@string/confirm_new_pwd"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/del_siginpwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dip"
            android:src="@drawable/ic_edit_del" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/tv_signin_pwd_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_signin_shape"
        android:gravity="center"
        android:padding="13dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>