<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/trade_type_view"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:onClick="toChoozeTradeType"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right_black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow_right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/trade_type"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/type_result"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/all"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/start_time"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawableRight="@mipmap/icon_arrow_right_black"
            android:gravity="center|right"
            android:text="@string/no_time"
            android:textColor="@color/comment_grey" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/end_time"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawableRight="@mipmap/icon_arrow_right_black"
            android:gravity="center|right"
            android:text="@string/no_time"
            android:textColor="@color/comment_grey" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/cancle_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/search_button_bg"
            android:padding="8dp"
            android:gravity="center"
            android:text="@string/clean"
            android:textColor="@drawable/search_text_bg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/search_button_bg"
            android:padding="8dp"
            android:gravity="center"
            android:text="@string/confirm_search"
            android:textColor="@drawable/search_text_bg"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/out_line" />

</LinearLayout>