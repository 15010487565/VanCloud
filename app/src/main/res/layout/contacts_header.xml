<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banckground_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_chat_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/me_item_single">

        <ImageView
            android:id="@+id/iv_chat_group"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_contacts_darkblue"
            android:scaleType="centerCrop"
            android:src="@mipmap/contacter_chatgroup" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_chat_group"
            android:text="@string/chat_group"
            android:textColor="@color/order_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="@color/line_color" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_work_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/me_item_single">

        <ImageView
            android:id="@+id/iv_work_group"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_contacts_red"
            android:scaleType="centerCrop"
            android:src="@mipmap/contacter_work_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_work_group"
            android:text="@string/tab_work"
            android:textColor="@color/order_black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="@color/line_color" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_organization"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/me_item_single">

        <ImageView
            android:id="@+id/iv_organization"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_contacts_bule"
            android:scaleType="centerCrop"
            android:src="@mipmap/contacter_organization" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_organization"
            android:text="@string/organization"
            android:textColor="@color/order_black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/recent_contact"
        android:textColor="@color/order_black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />
</LinearLayout>