<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="50dip">


    <ImageView
        android:id="@+id/id_treenode_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:src="@mipmap/tree_ec" />

    <CheckBox
        android:id="@android:id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/icon_check"
        android:clickable="true"
        android:focusable="false" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:src="@mipmap/user_photo_default_small" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_treenode_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="12"
            android:textColor="@color/comment_grey"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/id_treenode_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/id_treenode_count"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/text_black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/id_treenode_sublabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_treenode_label"
            android:text="@string/app_name"
            android:textColor="@color/comment_grey"
            android:textSize="13dip" />

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:padding="10dip"
        android:text="@string/editor"
        android:textColor="@color/edit_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:padding="10dip"
        android:text="@string/join"
        android:textColor="@color/edit_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_info_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:padding="10dip"
        android:text="@string/editor"
        android:textColor="@color/edit_color"
        android:visibility="gone" />

</LinearLayout>