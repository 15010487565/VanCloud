<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doalig_bg_shape_agreement_dialog"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:lineSpacingExtra="10dp"
            android:text="个人信息保护指引"
            android:textColor="@color/black_22"
            android:textSize="18sp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/login_agreement_hint"
                    android:textColor="@color/comment_grey"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_LoginAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="20dp"
                    android:lineSpacingExtra="10dp"
                    android:text="我已阅读《用户协议及隐私政策》"
                    android:textColor="@color/comment_grey"
                    android:textSize="15sp" />
            </LinearLayout>

        </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ExitAgreement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:lineSpacingExtra="10dp"
                android:text="取消"
                android:textColor="@color/black_22"
                android:textSize="17sp" />
            <ImageView
                android:id="@+id/img_line"
                android:layout_width="1px"
                android:layout_height="43dp"
                android:background="@color/alertdialog_line"
                 />
            <TextView
                android:id="@+id/tv_ColseAgreement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:lineSpacingExtra="10dp"
                android:text="同意并继续"
                android:textColor="@color/comment_blue"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>