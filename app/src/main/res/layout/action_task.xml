<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/comment_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img01"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_comment_click" />

            <TextView
                android:id="@+id/commenttext"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="@string/comment"
                android:textColor="@drawable/bottom_button_text"
                android:textSize="12.5sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/praise_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img02"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_praise_click" />

            <TextView
                android:id="@+id/praisetext"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="@string/praise"
                android:textColor="@drawable/bottom_button_text"
                android:textSize="12.5sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/cancel_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img03"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more_button_cancel_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="@string/cancel"
                android:textColor="@drawable/bottom_button_text"
                android:textSize="12.5sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
