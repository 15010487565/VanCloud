<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@color/banckground_color" />

    <LinearLayout
        android:id="@+id/plant_time_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/item_select"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plant_time"
            android:textColor="@color/comment_grey"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/plant_time"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_black"
            android:textSize="17sp"

            />
    </LinearLayout>

    <include layout="@layout/driver_line" />

    <LinearLayout
        android:id="@+id/btn_task_type_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/item_select"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_task_tip"
            android:textColor="@color/comment_grey"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btn_task_type"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_black"
            android:textSize="17sp"

            />
    </LinearLayout>


</LinearLayout>
