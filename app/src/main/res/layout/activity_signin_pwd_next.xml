<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_bar_signin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <RelativeLayout
            android:id="@+id/re_signin_pwd_code"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_signin_pwd_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="+86"
                android:textColor="@color/order_black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_area_code"
                android:src="@mipmap/ic_arrow_down_pressed" />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/out_line" />

        <EditText
            android:id="@+id/et_signin_phone"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/vancloud_input_phone_number"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/order_black"
            android:textColorHint="@color/comment_grey"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/del_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:padding="10dip"
            android:src="@drawable/ic_edit_del" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
    <Button
        android:id="@+id/tv_signin_pwd_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:enabled="false"
        android:padding="13dp"
        android:background="@drawable/selector_button_style"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>