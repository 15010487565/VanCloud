<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/comment_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action"
      >

        <LinearLayout
            android:id="@+id/comment_num_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_comment_click" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="@string/comment"
                android:textColor="@color/item_button_text_click"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/praise_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action"
      >


        <LinearLayout
            android:id="@+id/praise_num_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/schedule_list_item_praise_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_praise_click" />

            <TextView
                android:id="@+id/praise_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="@string/praise"
                android:textColor="@color/item_button_text_click"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/more_click"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action"
       >


        <LinearLayout
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/more_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_more_click" />

            <TextView
                android:id="@+id/more_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="@string/deep"
                android:textColor="@color/item_button_text_click"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>