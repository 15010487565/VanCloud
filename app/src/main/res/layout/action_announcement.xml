<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:gravity="center_vertical"
    android:id="@+id/ll_detail"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/reply_button_onclick"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img01"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_comment_click" />

            <TextView
                android:id="@+id/reply_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="@string/detail_reply"
                android:textColor="@color/item_button_text_click" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/praise_button_click"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bottom_action">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img02"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/item_praise" />

            <TextView
                android:id="@+id/praise_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="@string/announcement_list_item_praise"
                android:textColor="@drawable/bottom_button_text"
                android:textSize="12.5sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
