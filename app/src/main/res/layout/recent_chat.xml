<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2EFEA"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/recent_chat_editText"
            style="@style/SingleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/search_left"
            android:drawableRight="@drawable/search_right"
            android:hint="@string/search" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recent_chat_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/create_new_chat"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:contentDescription="@null"
            android:src="@drawable/wg_gz_next" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F2EFEA"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/recent_chat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E3E3" />

    <ListView
        android:id="@+id/recent_chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#EAE8E7"
        android:dividerHeight="1dp"
        android:scrollbars="none" />

</LinearLayout>