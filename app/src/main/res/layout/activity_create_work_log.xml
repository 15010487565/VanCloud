<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banckground_color"
    tools:context="com.vgtech.vancloud.ui.worklog.CreateWorkLogActivity">


    <include
        android:id="@+id/title"
        layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/create_work_log_sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <com.vgtech.vancloud.ui.worklog.SelectView
                android:id="@+id/create_work_log_select_start_time"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="21dp"
                app:selectName="@string/start_time"
                app:selectTextColor="#333333"
                app:selectTextSize="15sp"
                app:selectValue="@string/please_select"
                app:selectValueMarginRight="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="21dp"
                android:background="#f2f2f2" />

            <com.vgtech.vancloud.ui.worklog.SelectView
                android:id="@+id/create_work_log_select_end_time"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="21dp"
                app:selectName="@string/end_time"
                app:selectTextColor="#333333"
                app:selectTextSize="15sp"
                app:selectValue="@string/please_select"
                app:selectValueMarginRight="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f2f2f2" />

            <com.vgtech.vancloud.ui.worklog.SelectView
                android:id="@+id/create_work_log_select_work_duration"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="21dp"
                app:selectName="@string/working_hours"
                app:selectTextColor="#333333"
                app:selectTextSize="15sp"
                app:selectValueMarginRight="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="21dp"
                android:background="#f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_work_loacation"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/create_work_log_et_work_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:gravity="top"
                android:hint="@string/hint_please_fill_work_location"
                android:lineSpacingExtra="2dp"
                android:lines="3"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="14dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_relevant_employees"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/create_work_log_et_work_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:gravity="top"
                android:hint="@string/hint_please_fill_relevant_employee"
                android:lineSpacingExtra="2dp"
                android:lines="3"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="14dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_work_desc"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/create_work_log_et_work_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:gravity="top"
                android:hint="@string/hint_please_fill_work_desc"
                android:lineSpacingExtra="2dp"
                android:lines="4"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="14dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_detail"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/create_work_log_et_work_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:gravity="top"
                android:hint="@string/hint_please_fill_detail"
                android:lineSpacingExtra="2dp"
                android:lines="4"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="14dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f2f2f2" />

            <com.vgtech.vancloud.ui.worklog.SelectView
                android:id="@+id/create_work_log_select_work_branch"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="21dp"
                app:selectName="@string/text_cost_center"
                app:selectTextColor="#333333"
                app:selectTextSize="15sp"
                app:selectValue="@string/please_select"
                app:selectValueMarginRight="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_feelings"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/create_work_log_et_work_idea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:gravity="top"
                android:hint="@string/hint_please_share_feelings"
                android:lineSpacingExtra="2dp"
                android:lines="4"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="14dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/create_worklog_rl_attachment_pic_container"
                    android:layout_width="112dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/attachment"
                    android:visibility="gone">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/create_worklog_iv_attachment_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/create_worklog_iv_attachment_pic_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:src="@mipmap/delete_res" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/create_worklog_iv_attachment_pic_add"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/create_worklog_rl_attachment_pic_container"
                    android:src="@mipmap/icon_add_pic" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_work_log_btn_save"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_angle_rect"
                    android:text="@string/save"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/create_work_log_btn_delete"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/bg_round_angle_rect"
                    android:text="@string/delete"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/shade_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:background="@color/diaphaneity_black"
        android:visibility="gone" />

    <ListView
        android:id="@+id/create_work_log_lv_cost_center"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:visibility="gone" />

    <com.vgtech.common.view.VancloudLoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendar_viewpager"
        android:visibility="gone" />

</RelativeLayout>
