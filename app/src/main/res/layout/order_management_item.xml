<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:padding="15dp">


        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:textColor="@color/order_grey"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/order_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_type"
            android:paddingTop="5dp"
            android:textColor="@color/order_grey"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_description"
            android:paddingTop="5dp"
            android:textColor="@color/order_grey"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_num"
            android:paddingTop="5dp"
            android:textColor="@color/order_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:paddingTop="5dp"
            android:textColor="@color/order_grey"
            android:textSize="13sp" />

        <Button
            android:id="@+id/pay_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/amount"
            android:layout_marginLeft="25dp"
            android:background="@drawable/blue_round_bg"
            android:text="@string/pay_button"
            android:textColor="@color/order_btn_blue"
            android:textSize="11sp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>