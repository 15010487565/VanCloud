<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ApplicationTheme" parent="activitynotAnimation">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/loading_img</item>
    </style>
    <style name="activitynotAnimation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="AppThemeAnimation" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--  新建-->
    <style name="AppNoTransparentThemeAnimation" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/highlight_bg</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/highlight_bg</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/highlight_bg</item>
    </style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">#585858</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Widget.ExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <!--   <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>-->
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
</resources>
