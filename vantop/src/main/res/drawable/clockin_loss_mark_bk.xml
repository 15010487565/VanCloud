<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6sp" />
            <solid android:color="@color/clokin_loss" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6sp" />
            <solid android:color="@color/clokin_normal" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="6sp" />
            <solid android:color="@color/clokin_outtime" />
        </shape>
    </item>
</selector>