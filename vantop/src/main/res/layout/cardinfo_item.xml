<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/line_header"
            android:layout_width="0.5dp"
            android:layout_height="17dp"
            android:background="@color/out_line" />

        <ImageView
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_gravity="center"
            android:src="@drawable/icon_circle_gray" />

        <View
            android:id="@+id/line_footer"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/out_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_select"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="12:90"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="日程外勤打卡"
                android:textColor="@color/text_black"
                android:textSize="13sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_dash"
            android:layerType="software" />
        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_select"
           >

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="经纬度:"
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_locationContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_dash"
            android:layerType="software" />
        <LinearLayout
            android:id="@+id/ll_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_select"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="打卡地址:"
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_dash"
            android:layerType="software" />
        <LinearLayout
            android:id="@+id/ll_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_select"
            >

            <TextView
                android:id="@+id/tv_remarkLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="备注:"
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/comment_grey"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_dash"
            android:layerType="software" />

        <com.vgtech.common.view.NoScrollGridview
            android:id="@+id/imagegridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:visibility="gone" />
        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/out_line" />
    </LinearLayout>
</LinearLayout>
