<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/item_select"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/vantop_cancle"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:gravity="center"
            android:background="@drawable/item_select"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/vantop_confine"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:layout_marginBottom="5dp"
        android:background="@color/actionsheet_gray"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.vgtech.common.utils.wheel.WheelView
            android:id="@+id/wheel_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff" />

        <com.vgtech.common.utils.wheel.WheelView
            android:id="@+id/wheel_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff" />
    </LinearLayout>
</LinearLayout>
